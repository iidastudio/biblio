{
  "name": "biblio",
  "version": "1.0.0",
  "description": "WordPress theme development env",
  "main": "index.js",
  "author": "Takayuki Iida",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "npm run wp-env start --update",
    "stop": "npm run wp-env stop",
    "wpclean": "npm run wp-env clean",
    "destroy": "npm run wp-env destroy",
    "cli": "wp-env run cli",
    "wp-env": "wp-env",
    "browsersync": "browser-sync start -p 'localhost:8888' -f '**/*.html' '**/*.php' '**/*.scss' '**/*.js' '**/*.json'",
    "watch": "run-p watch:*",
    "watch:sass-auto-index": "sass-auto-index ./src/assets/scss -w",
    "watch:css": "chokidar './src/assets/scss/' -c 'npm run css' --silent --initial",
    "watch:js": "chokidar './src/assets/js/' -c 'npm run js' --silent --initial ",
    "watch:image": "chokidar './src/assets/img/' -c 'npm run image' --silent --initial",
    "watch:json": "chokidar './src/**/*.json' -c 'npm run json' --initial",
    "watch:fonts": "chokidar './src/assets/fonts/' -c 'npm run font' --initial",
    "build": "run-p json css js image fonts",
    "json": "run-s json:*",
    "json:themejson": "merge-theme-json -b ./src/assets/theme-json/base.json -t ./src/assets/theme-json ./src/assets/scss/wp-blocks -o ./theme.json",
    "json:pxtorem": "node ./themejson-pxtorem",
    "css": "run-s css:*",
    "css:sass": "npm run clean:css && sass src/assets/scss:$npm_package_config_dist/css -s expanded --no-source-map",
    "css:autoprefixer": "postcss ./$npm_package_config_dist/css/**/*.css --base ./$npm_package_config_dist/css -d ./$npm_package_config_dist/css --no-map --config config/postcss.config.js",
    "js": "npm run clean:js && wp-scripts build --config config/webpack.config.js",
    "image": "npm run clean:image && node config/imagemin.js",
    "fonts": "npm run clean:fonts && cpx './src/assets/fonts/**/{*.svg,*.ttf,*.woff,*.woff2}' ./$npm_package_config_dist/fonts",
    "clean": "rimraf ./$npm_package_config_dist",
    "clean:css": "rimraf ./$npm_package_config_dist/*.css && rimraf ./$npm_package_config_dist/css/ && mkdir -p ./$npm_package_config_dist/css/",
    "clean:js": "rimraf ./$npm_package_config_dist/js/ && mkdir -p ./$npm_package_config_dist/js/",
    "clean:image": "rimraf ./$npm_package_config_dist/img/ && mkdir -p ./$npm_package_config_dist/img/",
    "clean:fonts": "rimraf ./$npm_package_config_dist/fonts/ && mkdir -p ./$npm_package_config_dist/fonts/",
    "tolocal": "cpx './**/*' '/Users/pchan/Local Sites/test/app/public/wp-content/themes/biblio'",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses --prod --gpl2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@wordpress/browserslist-config": "^5.11.0",
    "@wordpress/env": "^5.13.0",
    "@wordpress/scripts": "^25.5.1",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.28.3",
    "browserlist": "^1.0.1",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "cpx": "^1.5.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "10.0.1",
    "merge-theme-json": "git+https://github.com/iidastudio/merge-theme-json.git",
    "npm-run-all": "^4.1.5",
    "po2json": "^0.4.5",
    "postcss-cli": "^10.1.0",
    "postcss-pxtorem": "^6.0.0",
    "rimraf": "^4.3.1",
    "sass": "^1.58.3",
    "sass-auto-index": "git+https://github.com/iidastudio/sass-auto-index.git"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "dependencies": {
    "@wordpress/i18n": "^4.28.0",
    "yakuhanjp": "^3.4.1"
  },
  "config": {
    "dist": "assets"
  }
}
