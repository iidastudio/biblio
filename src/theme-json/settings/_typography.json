{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "typography": {
      "customFontSize": true,
			"dropCap": true,
			"fluid": {
				"minViewportWidth": "480px",
				"maxViewportWidth": "960px"
			},
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
      "fontFamilies": [
        {
          "fontFamily": "Biblio, YakuHanJPs, \"-apple-system\", \"BlinkMacSystemFont\", \"Roboto\", \"Segoe UI\", 'Hiragino Kaku Gothic ProN','Biblio Hiragino Sans', 'Noto Sans JP', 'Yu Gothic Medium', '游ゴシック Medium', 'Meiryo',  sans-serif",
          "slug": "system-gothic",
          "name": "Gothic"
        },
				{
          "fontFamily": "Biblio, \"-apple-system\", \"BlinkMacSystemFont\", \"Roboto\", \"Segoe UI\", 'Hiragino Kaku Gothic ProN','Biblio Hiragino Sans', 'Noto Sans JP', 'Yu Gothic Medium', '游ゴシック Medium', 'Meiryo',  sans-serif",
          "slug": "system-gothic-vertical",
          "name": "Gothic vertical"
        },
				{
          "fontFamily": "Biblio, YakuHanMPs, Times New Roman, 'ヒラギノ明朝 ProN W3', Hiragino Mincho ProN, '游明朝 Medium', 'YuMincho Medium', Noto Serif Japanese,'ヒラギノ明朝 ProN W3',Hiragino Mincho ProN, serif",
          "slug": "system-mincho",
          "name": "Mincho"
        },
				{
          "fontFamily": "Biblio, Times New Roman, 'ヒラギノ明朝 ProN W3', Hiragino Mincho ProN, '游明朝 Medium', 'YuMincho Medium', Noto Serif Japanese,'ヒラギノ明朝 ProN W3',Hiragino Mincho ProN, serif",
          "slug": "system-mincho-vertical",
          "name": "Mincho vertical"
        }
      ],
			"fontSizes": [
				{
					"fluid": false,
					"name": "3XS 10px",
					"size": "0.625rem",
					"slug": "biblio-3xs"
				},
				{
					"fluid": false,
					"name": "2XS 12px",
					"size": "0.75rem",
					"slug": "biblio-2xs"
				},
				{
					"fluid": false,
					"name": "XS 14px",
					"size": "0.875rem",
					"slug": "biblio-xs"
				},
				{
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					},
					"name": "S 16-14px",
					"size": "1rem",
					"slug": "biblio-sm"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					},
					"name": "M 18-16px",
					"size": "1.125rem",
					"slug": "biblio-md"
				},
				{
					"fluid": {
						"min": "1.125rem",
						"max": "1.25rem"
					},
					"name": "L 20-18px",
					"size": "1.25rem",
					"slug": "biblio-lg"
				},
				{
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					},
					"name": "XL 24-20px",
					"size": "1.5rem",
					"slug": "biblio-xl"
				},
				{
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					},
					"name": "2XL 32-24px",
					"size": "2rem",
					"slug": "biblio-2xl"
				},
				{
					"fluid": {
						"min": "2rem",
						"max": "3rem"
					},
					"name": "3XL 48-32px",
					"size": "3rem",
					"slug": "biblio-3xl"
				},
				{
					"fluid": false,
					"name": "4XL 72-48px",
					"size": "calc(var(--wp--preset--font-size--biblio-2-xl) * var(--wp--custom--font-size--ratio))",
					"slug": "biblio-4xl"
				},
				{
					"fluid": false,
					"name": "5XL 108-72px",
					"size": "calc(var(--wp--preset--font-size--biblio-3-xl) * var(--wp--custom--font-size--ratio))",
					"slug": "biblio-5xl"
				}
			]
    },
		"custom": {
			"fontSize": {
				"ratio": "1.5"
			}
		}
  }
}
