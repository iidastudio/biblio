{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": [ "px", "em", "rem", "vh", "vw" ],
      "spacingScale": {
				"steps": 0
			},
      "spacingSizes": [
        {
          "size": "0.25rem",
          "slug": "20",
          "name": "4px"
        },
        {
          "size": "0.5rem",
          "slug": "30",
          "name": "8px"
        },
        {
          "size": "1rem",
          "slug": "40",
          "name": "16px"
        },
        {
          "size": "var(--wp--preset--font-size--biblio-lg)",
          "slug": "50",
          "name": "20-18px"
        },
        {
          "size": "var(--wp--preset--font-size--biblio-xl)",
          "slug": "60",
          "name": "24-20px"
        },
        {
          "size": "var(--wp--preset--font-size--biblio-2-xl)",
          "slug": "70",
          "name": "32-24px"
        },
        {
          "size": "var(--wp--preset--font-size--biblio-3-xl)",
          "slug": "80",
          "name": "48-32px"
        },
        {
          "size": "calc(var(--wp--preset--spacing--80) * var(--wp--custom--spacing--ratio))",
          "slug": "90",
          "name": "72-48px"
        },
        {
          "size": "calc(var(--wp--preset--spacing--90) * var(--wp--custom--spacing--ratio))",
          "slug": "100",
          "name": "108-72px"
        }
      ]
    },
		"custom": {
			"spacing": {
				"ratio": "1.5"
			}
		}
  }
}