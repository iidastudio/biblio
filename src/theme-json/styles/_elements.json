{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "styles": {
    "elements": {
      "heading": {
        "typography": {
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-2-xl)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-xl)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-lg)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-md)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-sm)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-sm)"
        }
      },
      "link": {
        "color": {
					"text": "currentColor"
				},
        "typography": {
          "textDecoration": "underline"
        },
        ":hover": {
          "typography": {
            "textDecoration": "none"
          }
        },
        ":focus": {
          "typography": {
            "textDecoration": "none"
          }
        }
      }
    }
  }
}