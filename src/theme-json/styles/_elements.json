{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "styles": {
    "elements": {
      "heading": {
        "typography": {
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-xl)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-lg)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "calc(var(--wp--preset--font-size--biblio-md) * 1.125)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--biblio-md)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "1rem"
        }
      },
      "h6": {
        "typography": {
          "fontSize": ".875rem"
        }
      },
      "link": {
        "color": {
					"text": "currentColor"
				},
        "typography": {
          "textDecoration": "underline"
        }
      }
    }
  }
}