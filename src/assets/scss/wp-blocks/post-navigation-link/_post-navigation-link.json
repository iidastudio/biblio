{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "styles": {
    "blocks": {
      "core/post-navigation-link": {
        "spacing": {
          "blockGap": "0"
        },
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--biblio-text)"
            },
            "border": {
              "style": "solid",
              "color": "currentColor",
              "width": "0",
              "top": {
                "width": "1px"
              },
              "bottom": {
                "width": "1px"
              }
            },
            "spacing": {
              "padding": {
                "top": "0.5em",
                "right": "1em",
                "bottom": "0.5em",
                "left": "1em"
              }
            },
            "typography": {
              "textDecoration": "none"
            },
            ":hover": {
              "color": {
                "text": "var(--wp--preset--color--biblio-background)",
                "background": "var(--wp--preset--color--biblio-text)"
              }
            }
          }
        }
      }
    }
  }
}