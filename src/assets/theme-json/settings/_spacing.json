{
  "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
  "settings": {
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "units": [ "px", "em", "rem", "vh", "vw" ],
      "spacingScale": {
				"steps": 0
			},
      "spacingSizes": [
        {
          "size": "0.5rem",
          "slug": "30",
          "name": "8px"
        },
        {
          "size": "1rem",
          "slug": "40",
          "name": "16px"
        },
        {
          "size": "clamp(1.5rem, 1.0385rem + 0.9615vw, 2rem)",
          "slug": "50",
          "name": "32-24px"
        },
        {
          "size": "clamp(2rem, 1.0769rem + 1.9231vw, 3rem)",
          "slug": "60",
          "name": "48-32px"
        },
        {
          "size": "clamp(4rem, 3.0769rem + 1.9231vw, 5rem)",
          "slug": "70",
          "name": "80-64px"
        },
        {
          "size": "clamp(6rem, 5.0769rem + 1.9231vw, 7rem)",
          "slug": "80",
          "name": "112-96px"
        }
      ]
    }
  }
}