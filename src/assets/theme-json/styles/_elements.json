{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "styles": {
    "elements": {
      "h1": {
        "typography": {
          "// fontSize'": "32px", 
          "fontSize": "var(--wp--custom--clamp--post--24-32)",
