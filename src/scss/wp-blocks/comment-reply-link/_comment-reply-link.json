{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "styles": {
    "blocks": {
      "core/comment-reply-link": {
        "typography": {
          "fontSize": "12px"
        },
        "elements": {
          "link": {
            "border": {
              "style": "solid",
              "width": "1px",
              "color": "var(--wp--preset--color--biblio-text)",
              "radius": "2px"
            },
            "spacing": {
              "padding": {
                "top": "0.2em",
                "right": "0.3em",
                "bottom": "0.2em",
                "left": "0.3em"
              }
            },
            "typography": {
              "fontSize": "inherit",
              "lineHeight": "inherit",
              "textDecoration": "none"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--biblio-text)",
                "text": "var(--wp--preset--color--biblio-background)"
              }
            }
          }
        }
      }
    }
  }
}