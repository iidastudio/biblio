{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "styles": {
    "blocks": {
      "core/navigation": {
        "typography": {
          "fontWeight": "600",
          "fontSize": "14px"
        },
        "spacing": {
          "blockGap": "0 1.5rem"
        },
        "elements": {
          "link": {
            "spacing": {
              "padding": {
                "top": "0.5rem",
                "bottom": "0.5rem"
              }
            },
            "typography": {
              "textDecoration": "none"
            }
          }
        }
      }
    }
  },
  "settings": {
    "blocks": {
      "core/navigation": {
        "custom": {
          "navigation": {
            "gap": "2rem",
            "submenu": {
              "width": "16rem"
            }
          }
        }
      }
    }
  }
}