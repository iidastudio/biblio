{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "styles": {
    "blocks": {
      "core/post-template": {
        "spacing": {
          "blockGap": "2rem"
        },
        "elements": {
          "h2": {
            "spacing": {
              "margin": {
                "top": "0",
                "bottom": "0"
              }
            }
          },
          "link": {
            "typography": {
              "textDecoration": "none"
            }
          }
        },
        "css": ">.wp-block-post{display:grid;grid-template-rows:subgrid;grid-row:span 3;gap:1rem;}"
      }
    }
  }
}