{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "spacing": {
      "blockGap": true
    }
  },
  "styles": {
    "blocks": {
      "core/gallery": {
        "spacing": {
          "// blockGap": "1rem"
        },
        "elements": {
          "caption": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--biblio-2-xs)"
            },
            "spacing": {
              "margin": {
                "top": "calc( -1 * var(--wp--style--unstable-gallery-gap) + 0.5em);"
              }
            }
          }
        }
      }
    }
  }
}