{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "styles": {
    "blocks": {
      "core/post-terms": {
        "spacing": {
          "blockGap": "0"
        },
        "typography": {
          "fontSize": "12px",
          "lineHeight": "1"
        },
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            },
            ":hover": {
              "typography": {
                "textDecoration": "underline"
              }
            }
          }
        }
      }
    }
  }
}